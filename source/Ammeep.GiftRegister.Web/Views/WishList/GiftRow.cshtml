@model Ammeep.GiftRegister.Web.Models.GiftWish


 <div class="registry_container first">
    <div class="registry_content">
        <div class="registry_title_blurb">
            <h1>@Model.ItemName</h1>
            <p>@Model.Description</p>
        </div>
        <div class="registry_box_left">
            <ul>
                <li>Suggested Store:</li>
                <li>Specific Item Required?</li>
                <li>Quantity:</li>
                <li>RRP (NZD):</li>
                <li>Website:</li>

            </ul>       
        </div>
        <div class="registry_box_middle">
            <ul>
                <li>Bed, Bath n' Table, Briscoes</li>
                <li>@Model.IsSpecificItemRequired</li>
                <li>@Model.QuantityRequired</li>
                <li>@Model.RetailPriceText</li>

                <li><a href="#">Click here</a></li>
            </ul>                     
        </div>
        <div class="registry_box_right">
            <img src="@Url.Content("~/Content/Images/button_get_this.png")"/>
        </div>
            
        </div>
    <div class="registry_img_area">
        	<div class="img_box">

            	<img src="@Model.ImageLocation" />
            </div>
        </div>
