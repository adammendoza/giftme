@model Ammeep.GiftRegister.Web.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<div class="admin_header"> </div>
<div class="login_flag"> <h2>Create a New Account</h2></div>
<div class="content">

    <div class="admin_content">

       
        <p>
            Use the form below to create a new account. </br>
            Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
        </p>

        @using (Html.BeginForm()) {
            @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
                                                                                                                                                                                                                                                                                                    <div>
            <div class="clearfix">

                   <div class="input">
                        <label for="username">Username:</label>
                        @Html.TextBoxFor(model => model.UserName)
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>

                     <div class="input">
                        <label for="username">Email:</label>
                        @Html.TextBoxFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                     <div class="input">
                        <label for="username">Password:</label>
                        @Html.TextBoxFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>

                     <div class="input">
                        <label for="username">ConfirmPassword:</label>
                        @Html.TextBoxFor(model => model.ConfirmPassword)
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
            </div>
           
          
            <p>
                <input type="submit" value="Register" />
            </p>
    </div>
        }
    </div>
</div>
