@model Ammeep.GiftRegister.Web.Models.RegistryItemsPage
@using Newtonsoft.Json
@{
    ViewBag.Title = "KO";
}

<h2>KO</h2>

<script src="../../Scripts/knockout-2.0.0.js" type="text/javascript"></script>
<script type="text/javascript">


    var gift = function(giftItem) {
        this.itemName = ko.observable(giftItem.ItemName);
        this.imageLocation = ko.observable(giftItem.ImageLocation);
        this.description = ko.observable(giftItem.Description);
        this.website = ko.observable(giftItem.Website);
        this.suggestedStores = ko.observable(giftItem.SuggestedStores);
        this.specificItemRequried = ko.observable(giftItem.IsSpecificItemRequired);
        this.quantityRequired = ko.observable(giftItem.Quantity);
        this.retailPrice = ko.observable(gift.Price);


        this.requiredYesNo = ko.computed(function () {
            if (this.specificItemRequried()) {
                return "Yes";
            } else {
                return "No";
            }
        }, this);

        this.retailPriceText = ko.computed(function () {
            return "$" + this.retailPrice();
        }, this);

        this.suggestedStoresText = ko.computed(function () {
            if (this.suggestedStores()) {
                return this.suggestedStores();
            } else {
                return "N/A";
            }

        }, this);

    }

    function RegistryViewModel() {
        this.gifts = ko.observableArray([new gift()]);
    }
    
</script>